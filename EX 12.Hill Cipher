import numpy as np

def hill_encrypt(pt, key):
    pt = pt.lower().replace(" ", "")
    if len(pt) % 2 != 0:
        pt += "x"
    cipher = ""
    for i in range(0, len(pt), 2):
        pair = [ord(pt[i]) - 97, ord(pt[i+1]) - 97]
        res = np.dot(key, pair) % 26
        cipher += chr(res[0] + 97) + chr(res[1] + 97)
    return cipher

key = np.array([[5, 17], [8, 3]])
pt = "hillcipher"
print("Ciphertext =", hill_encrypt(pt, key))
